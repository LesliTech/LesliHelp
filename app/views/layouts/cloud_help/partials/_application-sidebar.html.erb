<% @current_path = request.env['PATH_INFO'] %>
<% @tabs_granted = {} 
    [
        {name: "dashboard", route: "cloud_help/dashboards", privilege: "show"},
        {name: "settings", route: "cloud_help/account/settings"},
        {name: "dashboards", route: "cloud_help/dashboards"},
        {name: "ticket_categories", route: "cloud_help/catalog/ticket_categories"},
        {name: "ticket_priorities", route: "cloud_help/catalog/ticket_priorities"},
        {name: "ticket_workspaces", route: "cloud_help/catalog/ticket_workspaces"},
        {name: "ticket_sources", route: "cloud_help/catalog/ticket_sources"},
        {name: "ticket_types", route: "cloud_help/catalog/ticket_types"},
        {name: "tickets", route: "cloud_help/tickets"},
        {name: "reports", route: "cloud_help/reports"},
        {name: "slas", route: "cloud_help/slas"},
        {name: "workflows", route: "cloud_help/workflows"}
    ].each do |tab|
        privilege = @account[:current_user][:abilities][tab[:route]]
        unless privilege.blank?
            privilege_name = "index"
            privilege_name = tab[:privilege] if tab[:privilege]

            @tabs_granted[tab[:name]] = privilege[privilege_name]
        end
    end
%>

<% if @tabs_granted["dashboard"] %>
    <%= navigation_lesli_item("/help", I18n.t("help.shared.sidebar_nav_dashboard"), "ri-dashboard-3-line") %>
<% end %>
<% if @tabs_granted["tickets"]%>
    <%= navigation_lesli_item(cloud_help.tickets_path, I18n.t("help.shared.sidebar_nav_tickets"), "ri-todo-line") %>
<% end %>
<% if @tabs_granted["slas"]%>
    <%= navigation_lesli_item(cloud_help.slas_path, I18n.t("help.shared.sidebar_nav_slas"), "ri-file-paper-2-line") %>
<% end %>
<% if @tabs_granted["reports"]%>
    <%= navigation_lesli_item(cloud_help.reports_path, I18n.t("help.shared.sidebar_nav_reports"), "ri-file-chart-line") %>
<% end %>
