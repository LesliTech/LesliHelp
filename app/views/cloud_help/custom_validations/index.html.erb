<p id="notice"><%= notice %></p>

<h1>Custom Validations</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @custom_validations.each do |custom_validation| %>
      <tr>
        <td><%= link_to 'Show', custom_validation %></td>
        <td><%= link_to 'Edit', edit_custom_validation_path(custom_validation) %></td>
        <td><%= link_to 'Destroy', custom_validation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Custom Validation', new_custom_validation_path %>
