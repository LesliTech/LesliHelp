<h1>Workflow Actions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workflow_actions.each do |workflow_action| %>
      <tr>
        <td><%= link_to 'Show', workflow_action %></td>
        <td><%= link_to 'Edit', edit_workflow_action_path(workflow_action) %></td>
        <td><%= link_to 'Destroy', workflow_action, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

